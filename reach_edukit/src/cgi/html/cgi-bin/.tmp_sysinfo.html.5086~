<script>
jQuery(function() {
	initFormValidation();
	
	var user = jQuery.cookies.get("user");
	if(user == "ReachWebAdmin"){
		jQuery(":input[name='serialNumber']").css({"background": "#ffffff"});
		jQuery(".serialTd").css({"display": "table-row"});
	}else{
		jQuery(".refreshTd").css({"display": "table-row"});
	}
	jQuery("#btnSetSerialNo").click(function(){
		var serialNumber = jQuery("#serialNumber").val();
		var validate = validateFormByID('wmform');
		if(validate) {
			var data = {"actioncode": "423", "serialNumber": serialNumber};
			jQueryAjaxCmd({
				"data": data,
				success: function(ret) {
					alert("$savesucess$");
				}
			});
			
		} else {
			return false;
		}
	});

	jQuery('#refreshBtn').click(function() {
		jQuery('#nav_sysinfo').click();
	});
	
});
</script>




