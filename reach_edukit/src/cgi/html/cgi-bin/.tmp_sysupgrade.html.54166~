		    cancel: true
		});
	});
	
	jQuery('#restartBtn').click(function() {
		art.dialog({
			title: '$resetdefault.reboot$',
			okValue: '$resetdefault.ok$',
			cancelValue: '$resetdefault.cancel$',
			lock: true,
			fixed: true,
		    background: '#600', // ����ɫ
		    opacity: 0.87,	// ͸����
		    content: "$resetdefault.rebootconfirm$",
