					{ 
						if(ret == "1")
						{
							alert('$resetdefault.rebootsuccess$');
							window.setTimeout('window.location.href = "encoder.cgi"', 1000);
						}
						else
						{
							alert('$uploadstateerror$');
							//window.setTimeout('window.location.href = "encoder.cgi"', 1000);
						}
					}
				});
				//window.location.href = "encoder.cgi";
			//	window.setTimeout('window.location.href = "encoder.cgi"', 1000);
		    },
		    cancel: true
		});
	});
	
	initFormValidation();
	
	
	
});
