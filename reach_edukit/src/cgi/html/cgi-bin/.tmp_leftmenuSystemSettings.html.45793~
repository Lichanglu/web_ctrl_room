<script type="text/javascript">
/*
 * init the click event handlers for the menu items.
 */
jQuery('#nav li a').click(function() {
	var actionCode = jQuery(this).attr('actionCode');
	closeAllPrompt();
	if(actionCode) {
		jQueryAjaxHtml({
			data: {"actioncode": actionCode}
		});
		/*if(!roller.firstClicked) {
			showMainContentAnimate();
		} else {
			roller.firstClicked = false;
		}*/
	}
});

/*
 * select the first menu item.
 */
leftMenu.init('nav', 1);

/*
 * hide part of menu items when the username is not admin.
 */
var user = jQuery.cookies.get('user');
if(user != 'admin') {
	jQuery('.adminopt').hide();
}
</script>